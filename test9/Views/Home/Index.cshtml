        <form id="Form3" action="/Myarchive/Index" method="post">
            <p> введите год прогноза</p>
            <p><input type="number" name="Year" /></p>
            
            <div class="inter">
                <p>
                    <input type="submit" class="send" id="SendButton" value="ПОСМОТРЕТЬ ПРОГНОЗ" />
                </p>
            </div>
        </form>




    </main>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
