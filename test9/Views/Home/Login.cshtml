@model test9.Models.UserLogin

@{
    Layout = null;
}

<!DOCTYPE html>
<head>
    <link href="@Url.Content("~/Content/Login.css")" rel="stylesheet" type="text/css" />
    @Styles.Render("~/Content/Login.css")

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/JavaScriptweather.js")

    <meta charset="utf-8">
</head>
@{
    ViewBag.Title = "Вход";
}<div class="entry-content">
    <div class="login">
        <h1>Вход</h1>
        <h1>Введите логин и пароль</h1>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()



            @Html.ValidationSummary(true)


            @Html.LabelFor(model => model.Name, new { @class = "top" })

            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)




            @Html.LabelFor(model => model.Password, new { @class = "top" })

            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)



            <div>
                <div>
                    <h4>   <input type="submit" value="Войти" /></h4>
                </div>
            </div>


        }
    </div>
</div>